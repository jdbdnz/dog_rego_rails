<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h2>Register your Dog online!</h2>
        <br />
        <p>
          Everybody with a dog needs to register, so why not do it online? 
        </p>
        <br />
        <p>
          <%= link_to " REGISTER NOW", new_registration_path, class: 'btn btn-primary btn-lg col-xs-12', role: 'button'  %>
        </p>
      </div>
      <div class="col-xs-12 col-md-6 text-right">
        <%= image_tag asset_path('dog_lying_down.png'), height: 250 %>
      </div>
    </div>
</div>