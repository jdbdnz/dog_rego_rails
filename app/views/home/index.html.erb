<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h2>Register your Dog online!</h2>
        <br />
        <p>
          Everybody with a dog needs to register, so why not do it online? 
        </p>
        <br />
        <p>
          <% register_link = user_signed_in? ? new_user_dog_path(current_user) : new_user_registration_path %>
          <%= link_to " REGISTER NOW", register_link, class: 'btn btn-primary btn-lg col-xs-12', role: 'button'  %>
        </p>
      </div>
      <div class="col-xs-12 col-md-6 text-right">
        <div class="visible-xs visible-sm"><br /><br /></div>
        <%= image_tag asset_path('dog_lying_down.png'), height: 250 %>
      </div>
    </div>
</div>