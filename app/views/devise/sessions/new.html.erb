<div class="row">

  <div class="col-xs-12 col-sm-6">
    <h2>Already a user?</h2>
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, autofocus: true %>
        <%= f.input :password %>
        <%= f.button :submit, "Sign in", class: 'col-xs-12 btn btn-info' %>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-6 text-center">
    <br /><br />
    <p class="hidden-xs">
      <br /><br /><br />
    </p>
    <p class="col-xs-12">
      Not registered a dog before? You'll need to make an account first.
    </p>
    <br />
    <br />
    <%= link_to "Create an Account", new_user_registration_path, class: 'btn btn-lg btn-primary'  %>
  </div>

</div>
